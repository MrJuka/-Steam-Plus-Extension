{
  "manifest_version": 2,
  "name": "Steam Market Listings",
  "version": "1.0",
  "description": "Displays all Steam Market listings.",
  "permissions": [
    "activeTab",
    "https://steamcommunity.com/market/*",
    "storage"
  ],
  "icons": {
    "48": "48.png",
    "96": "96.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "48.png",
      "96": "96.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://steamcommunity.com/market/*"],
      "js": ["content.js"]
    }
  ]
}
